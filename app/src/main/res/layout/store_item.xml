<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/store_photo"
        android:layout_width="100dp"
        android:layout_height="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/store_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/store_photo"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/store_photo"
        android:textSize="15sp"
        android:text="가게 이름"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/star"
        android:layout_width="15sp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="★"
        android:textColor="#FAE100"
        app:layout_constraintBottom_toBottomOf="@+id/store_photo"
        app:layout_constraintLeft_toLeftOf="@+id/store_title"
        />
    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/store_photo"
        app:layout_constraintLeft_toRightOf="@+id/star"
        android:textSize="15sp"
        android:text="4.9"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/store_photo"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintLeft_toRightOf="@+id/num"
        android:textSize="15sp"
        android:text="닭가슴살"
        android:layout_marginLeft="10dp"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#E2EAE2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/point" />
</androidx.constraintlayout.widget.ConstraintLayout>