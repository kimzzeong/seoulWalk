<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/review_item_profile"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/review_item_profile_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/gray"
            android:src="@drawable/basic_profile"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/review_item_nickname"
            android:text="닉네임"
            app:layout_constraintLeft_toRightOf="@+id/review_item_profile_photo"
            app:layout_constraintTop_toTopOf="@+id/review_item_profile_photo"
            app:layout_constraintBottom_toBottomOf="@+id/review_item_profile_photo"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/review_item_more_menu"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintTop_toTopOf="@+id/review_item_profile_photo"
            app:layout_constraintBottom_toBottomOf="@+id/review_item_profile_photo"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--  후기탭 이미지 뷰페이저  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/review_item_profile"
        android:id="@+id/review_item_img"
        android:layout_height="300dp"
        android:layout_marginTop="15dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/sliderViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/viewFadingEdge"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_fading_edge"
            app:layout_constraintBottom_toBottomOf="@id/sliderViewPager" />

        <LinearLayout
            android:id="@+id/layoutIndicators"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/viewFadingEdge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/review_item_img"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:id="@+id/review_item_icon"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:layout_marginEnd="8dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_chat_bubble_outline_24"
            android:layout_marginEnd="8dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_bookmark_border_24"
            android:layout_marginEnd="8dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_item_info"
        android:text="조회 100회 · teamnova님이 좋아합니다."
        app:layout_constraintTop_toBottomOf="@+id/review_item_icon"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_item_content"
        android:padding="5dp"
        android:layout_marginTop="5sp"
        app:layout_constraintTop_toBottomOf="@+id/review_item_info"
        android:text="계정명  내용내용내용내용내용내용내용내용내용내용"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_item_comments"
        android:padding="5dp"
        android:layout_marginTop="5sp"
        app:layout_constraintTop_toBottomOf="@+id/review_item_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="댓글 5개 모두 보기"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_item_ago"
        android:padding="5dp"
        android:layout_marginTop="5sp"
        app:layout_constraintTop_toBottomOf="@+id/review_item_comments"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="5시간 전"
        />


</androidx.constraintlayout.widget.ConstraintLayout>