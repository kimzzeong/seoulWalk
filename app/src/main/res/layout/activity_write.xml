<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityWrite"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/write_post_button"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/write_actionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/white"
                android:elevation="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:text="둘레돌래"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/write_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="20sp"
                    android:text="저장"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"/>
            </androidx.appcompat.widget.Toolbar>
            <Spinner
                android:id="@+id/write_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>
            <Spinner
                android:id="@+id/write_course_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/write_actionbar"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="제목"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@null"
                android:maxLines="1"
                android:paddingLeft="10dp"/>
            <View
                android:id="@+id/line1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="2px"
                app:layout_constraintTop_toBottomOf="@id/post_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="내용을 입력해 주세요"
                android:gravity="left|top"
                android:background="@null"
                android:bufferType="spannable"
                android:scrollbars="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/line1"/>
            <LinearLayout
                android:id="@+id/layoutList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/post_Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/write_post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="9"
        >
        <Button
            android:id="@+id/camera_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            app:backgroundTint="@null"
            android:background="@color/white"
            android:drawableLeft="@drawable/camera"
            android:paddingStart="10dp"
            android:text="카메라"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textFontWeight="3" />
        <Button
            android:id="@+id/gallery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            app:backgroundTint="@null"
            android:background="@color/white"
            android:drawableLeft="@drawable/gallery"
            android:paddingStart="10dp"
            android:text="갤러리"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textFontWeight="3" />
        <Button
            android:id="@+id/link_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            app:backgroundTint="@null"
            android:background="@color/white"
            android:drawableLeft="@drawable/link"
            android:paddingStart="10dp"
            android:text="링크"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textFontWeight="3" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

